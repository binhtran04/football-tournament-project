# Database Configuration for Team Service
DB_USER=team_user
DB_PASSWORD=team_password
DB_NAME=team_db
TEAM_DB_HOST=team-db
DB_PORT=5432

# Database Configuration for Tournament Service  
TOURNAMENT_DB_HOST=tournament-db
# Note: Tournament service uses same DB_USER, DB_PASSWORD, DB_PORT
# but different TOURNAMENT_DB_HOST and DB_NAME=tournament_db

# Frontend Configuration
VITE_TEAM_SERVICE_URL=http://localhost:8001
VITE_TOURNAMENT_SERVICE_URL=http://localhost:8002

# ZeroMQ Configuration
# team-service binds to tcp://0.0.0.0:5555
# tournament-service connects to tcp://team-service:5555

# Production Environment Variables (not used in development)
# NODE_ENV=production
# DATABASE_SSL=true
# CORS_ORIGINS=https://yourdomain.com
# SECRET_KEY=your-secret-key

# Docker Compose Configuration
COMPOSE_PROJECT_NAME=football-tournament