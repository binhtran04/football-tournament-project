# Team Service Database Configuration
TEAM_DB_USER=team_user
TEAM_DB_PASSWORD=team_password
TEAM_DB_HOST=team-db
TEAM_DB_NAME=team_db

# Tournament Service Database Configuration
TOURNAMENT_DB_USER=tournament_user
TOURNAMENT_DB_PASSWORD=tournament_password
TOURNAMENT_DB_HOST=tournament-db
TOURNAMENT_DB_NAME=tournament_db

# Frontend Configuration
VITE_TEAM_SERVICE_URL=http://localhost:8001
VITE_TOURNAMENT_SERVICE_URL=http://localhost:8002

# Database Port Mappings (external ports for database access)
TEAM_DB_EXTERNAL_PORT=5434
TOURNAMENT_DB_EXTERNAL_PORT=5435

# Service Ports
TEAM_SERVICE_PORT=8001
TOURNAMENT_SERVICE_PORT=8002
FRONTEND_PORT=5173

# ZeroMQ Configuration
# team-service binds to tcp://0.0.0.0:5555
# tournament-service connects to tcp://team-service:5555

# Production Environment Variables (not used in development)
# NODE_ENV=production
# DATABASE_SSL=true
# CORS_ORIGINS=https://yourdomain.com
# SECRET_KEY=your-secret-key

# Docker Compose Configuration
COMPOSE_PROJECT_NAME=football-tournament